extends layout.pug


block content
    if(errors)
        each error in errors
            .error
                h2=error
    form(action="/questions", method="post")
        div.qfgrid-1
            label(for="title") Title
                p Be specific and imagine you're asking a question to another person
            input(name="title", type="text" value=title)
        div.qfgrid-2
            label(for="textArea") textArea
                p Include all the information someone would need to answer you question
            textarea(type="text" name="textArea") #{textArea}
            div
        div
            button(type="submit") Submit Question
